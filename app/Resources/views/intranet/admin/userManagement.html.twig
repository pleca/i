                                        $('#division').empty();
                                        var opt = document.createElement('option');
                                        opt.value = 'default';
                                        opt.innerHTML = 'Wybierz dział';
                                        division.appendChild(opt);
                                        for (var x = 0; x<=data.length-1; x++){
                                            var opt = document.createElement('option');
                                            opt.value = data[x][0]['divisionId'];
                                            opt.innerHTML = data[x][0]['divisionName'];
                                            division.appendChild(opt);
                                        }
