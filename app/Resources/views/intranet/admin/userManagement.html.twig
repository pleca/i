    <div id="example">
        <table id="myTable" class="table table-striped">
            <tr>
                <th onclick="sortTable(0)">Nazwisko</th>
                <th onclick="sortTable(1)">Imie</th>
                <th onclick="sortTable(2)">Login</th>
                <th onclick="sortTable(3)">E-mail</th>
