    <div class="well well-sm"><span class="path"><a href="{{ path('Aktualności') }}">Strona Główna</a> <a href="{{ path('Galeria') }}">/ Galeria</a> / {{ album.albumName }} (edycja)</span></div>
    <div class="row text-center news-row">
        <div class="col-xs-12">
            <div class="news-title">
                <h1>{{ album.albumName }}</h1>
            </div>
            <div class="col-sm-12 news-content">
                <figure>
                    <img src="{{ asset(imagepath ~ album.albumImage) }}" alt="Example"/>
                </figure>
                <div>
                    {{ album.albumDesc |convert_encoding('UTF-8', 'HTML-ENTITIES') | raw }}
                </div>
            </div>
        </div>
    </div>
    <div class="form-group edit-div">
        {{ form_start(editForm) }}
        {{ form_row(editForm.albumName) }}
        {{ form_row(editForm.albumDesc) }}
        {{ form_row(editForm.albumImage) }}
        {{ form_end(editForm) }}
    </div>
{% endblock %}